<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Sobre"
             x:Class="AmigoSecreto.Paginas.Sobre">
    <ContentPage.Content>
        <Grid BackgroundColor="#FF3562">
            <StackLayout Margin="0" VerticalOptions="Start" HorizontalOptions="Center">
                <Image Source="GiftBox.png" WidthRequest="200" HorizontalOptions="Center"/>
                <Label Text="Amigo Secreto" TextTransform="None" 
                       TextColor="White" FontAttributes="Bold" FontSize="80" HorizontalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout Margin="0,0,0,80" VerticalOptions="End" HorizontalOptions="Center">
                <Label Text="Criado por Vinicius Triches &#10;contato@silches.com"
                       TextColor="White" FontSize="Large"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>